{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=CharterReporterApp;Uid=root;Pwd=your_password_here;",
    "MoodleConnection": "Server=localhost;Database=moodle;Uid=moodle_user;Pwd=moodle_password_here;",
    "WooCommerceConnection": "Server=localhost;Database=wordpress;Uid=wp_user;Pwd=wp_password_here;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Charter.ReporterApp": "Debug"
    }
  },
  "AllowedHosts": "*",
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "FromEmail": "noreply@charter.co.za",
    "FromName": "Charter Institute",
    "Username": "your_email@gmail.com",
    "Password": "your_app_password_here"
  },
  "Security": {
    "RequireHttps": true,
    "CookieSecurePolicy": "Always",
    "DataProtectionKeysPath": "./keys",
    "SessionTimeout": 20,
    "MaxFailedLoginAttempts": 5,
    "LockoutDuration": 15,
    "PasswordRequirements": {
      "RequiredLength": 8,
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireNonAlphanumeric": true,
      "RequiredUniqueChars": 6
    }
  },
  "Features": {
    "EnableEmailVerification": true,
    "EnableAuditLogging": true,
    "EnableRateLimiting": true,
    "EnableTwoFactorAuth": false,
    "MaintenanceMode": false
  },
  "Cache": {
    "DefaultExpirationMinutes": 30,
    "DashboardCacheMinutes": 5,
    "ReportCacheMinutes": 10
  },
  "FileStorage": {
    "MaxFileSize": 5242880,
    "AllowedExtensions": [".pdf", ".doc", ".docx", ".xls", ".xlsx", ".csv"],
    "UploadPath": "./uploads"
  },
  "ApplicationInsights": {
    "ConnectionString": "InstrumentationKey=your_key_here"
  }
}