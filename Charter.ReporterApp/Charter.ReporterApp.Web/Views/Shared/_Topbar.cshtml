<!-- End of Topbar -->

<script>
    // Topbar functionality
    document.addEventListener('DOMContentLoaded', function() {
        // Update alerts for admin users
        @if (User.IsInRole("Charter-Admin"))
        {
            <text>
            updateAlerts();
            setInterval(updateAlerts, 60000); // Update every minute
            </text>
        }
    });

    function updateAlerts() {
        // Fetch pending registrations and other alerts
        fetch('/Admin/GetPendingCount')
            .then(response => response.json())
            .then(data => {
                const counter = document.getElementById('alerts-counter');
                const content = document.getElementById('alerts-content');
                
                if (data.count > 0) {
                    counter.textContent = data.count;
                    counter.style.display = 'inline';
                    
                    content.innerHTML = `
                        <a class="dropdown-item d-flex align-items-center" href="/Admin/Approvals">
                            <div class="mr-3">
                                <div class="icon-circle bg-warning">
                                    <i class="fas fa-user-plus text-white"></i>
                                </div>
                            </div>
                            <div>
                                <div class="small text-gray-500">${new Date().toLocaleDateString()}</div>
                                <span class="font-weight-bold">${data.count} pending registration${data.count === 1 ? '' : 's'}</span>
                            </div>
                        </a>
                    `;
                } else {
                    counter.style.display = 'none';
                    content.innerHTML = '<a class="dropdown-item text-center small text-gray-500" href="#">No new alerts</a>';
                }
            })
            .catch(error => console.warn('Failed to update alerts:', error));
    }

    function viewProfile() {
        console.log('View profile functionality');
    }

    function viewSettings() {
        console.log('View settings functionality');
    }

    function viewActivityLog() {
        console.log('View activity log functionality');
    }
</script>