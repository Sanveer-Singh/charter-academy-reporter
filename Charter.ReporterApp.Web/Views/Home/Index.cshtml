@{
    ViewData["Title"] = "Home";
    Layout = "_LoginLayout";
}

<style>
    .landing-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #1e3a8a 0%, #1e2f5c 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }
    
    .landing-card {
        background: white;
        border-radius: 1rem;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        max-width: 800px;
        width: 100%;
        padding: 3rem;
        text-align: center;
    }
    
    .landing-logo {
        width: 100px;
        height: 100px;
        background: var(--charter-primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2rem;
        font-size: 3rem;
        color: white;
    }
    
    .landing-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--charter-gray-900);
        margin-bottom: 1rem;
    }
    
    .landing-subtitle {
        font-size: 1.25rem;
        color: var(--charter-gray-600);
        margin-bottom: 3rem;
    }
    
    .landing-features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
        text-align: left;
    }
    
    .feature-item {
        display: flex;
        align-items: flex-start;
    }
    
    .feature-icon {
        background: rgba(30, 58, 138, 0.1);
        color: var(--charter-primary);
        width: 40px;
        height: 40px;
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        margin-right: 1rem;
    }
    
    .feature-content h3 {
        font-size: 1rem;
        font-weight: 600;
        color: var(--charter-gray-900);
        margin-bottom: 0.25rem;
    }
    
    .feature-content p {
        font-size: 0.875rem;
        color: var(--charter-gray-600);
        margin: 0;
    }
    
    .landing-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }
    
    .btn-landing {
        padding: 0.75rem 2rem;
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        border-radius: 0.5rem;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
    }
    
    .btn-landing i {
        margin-right: 0.5rem;
    }
    
    .btn-landing-primary {
        background: var(--charter-primary);
        color: white;
    }
    
    .btn-landing-primary:hover {
        background: var(--charter-primary-dark);
        transform: translateY(-2px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        color: white;
        text-decoration: none;
    }
    
    .btn-landing-secondary {
        background: white;
        color: var(--charter-primary);
        border: 2px solid var(--charter-primary);
    }
    
    .btn-landing-secondary:hover {
        background: var(--charter-primary);
        color: white;
        text-decoration: none;
    }
</style>

<div class="landing-page">
    <div class="landing-card">
        <div class="landing-logo">
            <i class="fas fa-chart-line"></i>
        </div>
        
        <h1 class="landing-title">Charter Reporter App</h1>
        <p class="landing-subtitle">
            Comprehensive reporting solution for tracking enrollments, sales, and course completions
        </p>
        
        <div class="landing-features">
            <div class="feature-item">
                <div class="feature-icon">
                    <i class="fas fa-user-graduate"></i>
                </div>
                <div class="feature-content">
                    <h3>Enrollment Tracking</h3>
                    <p>Real-time monitoring of student enrollments across all courses</p>
                </div>
            </div>
            
            <div class="feature-item">
                <div class="feature-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="feature-content">
                    <h3>Sales Analytics</h3>
                    <p>Comprehensive sales data from WooCommerce integration</p>
                </div>
            </div>
            
            <div class="feature-item">
                <div class="feature-icon">
                    <i class="fas fa-certificate"></i>
                </div>
                <div class="feature-content">
                    <h3>Completion Reports</h3>
                    <p>Track course completion rates and student progress</p>
                </div>
            </div>
            
            <div class="feature-item">
                <div class="feature-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <div class="feature-content">
                    <h3>Role-Based Access</h3>
                    <p>Secure access control for different administrator roles</p>
                </div>
            </div>
            
            <div class="feature-item">
                <div class="feature-icon">
                    <i class="fas fa-file-export"></i>
                </div>
                <div class="feature-content">
                    <h3>Export Options</h3>
                    <p>Export data in CSV, XLSX, or PDF formats</p>
                </div>
            </div>
            
            <div class="feature-item">
                <div class="feature-icon">
                    <i class="fas fa-mobile-alt"></i>
                </div>
                <div class="feature-content">
                    <h3>Mobile Responsive</h3>
                    <p>Access reports from any device, anywhere</p>
                </div>
            </div>
        </div>
        
        <div class="landing-actions">
            <a asp-controller="Account" asp-action="Login" class="btn-landing btn-landing-primary">
                <i class="fas fa-sign-in-alt"></i>Sign In
            </a>
            <a asp-controller="Account" asp-action="Register" class="btn-landing btn-landing-secondary">
                <i class="fas fa-user-plus"></i>Create Account
            </a>
        </div>
    </div>
</div>