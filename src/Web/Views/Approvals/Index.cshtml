@model IEnumerable<Charter.Reporter.Infrastructure.Data.Entities.ApprovalRequest>
@{
    ViewData["Title"] = "Approvals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Pending Approvals</h1>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back</a>
 </div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Requested Role</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Email</td>
                        <td>@item.RequestedRole</td>
                        <td>@item.CreatedUtc.ToString("u")</td>
                        <td>
                            <form asp-action="Approve" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-success">Approve</button>
                            </form>
                            <form asp-action="Reject" method="post" class="d-inline ml-1">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="text" name="reason" placeholder="Reason" class="form-control form-control-sm d-inline-block" style="width: 160px;" />
                                <button type="submit" class="btn btn-sm btn-danger ml-1">Reject</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>


