@model IEnumerable<Charter.Reporter.Infrastructure.Data.Entities.ApprovalRequest>
@using Charter.Reporter.Application.Services.Users
@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var allUsers = ViewBag.AllUsers as List<UserListVm> ?? new List<UserListVm>();
    var availableRoles = ViewBag.AvailableRoles as string[] ?? Array.Empty<string>();
}

@section Styles {
    <style>
        .user-actions .btn { margin: 0 2px; }
        .status-locked { background: #dc3545; color: white; padding: 2px 8px; border-radius: 4px; }
        .status-active { background: #28a745; color: white; padding: 2px 8px; border-radius: 4px; }
        .modal-header { background: #4e73df; color: white; }
        .modal-header .close { color: white; }
        .password-display { background: #f8f9fc; padding: 10px; border-radius: 5px; font-family: monospace; font-size: 16px; }
        .approval-card { border-left: 4px solid #4e73df; }
    </style>
}

<div class="container-fluid">
    @* Global anti-forgery token for AJAX requests *@
    @Html.AntiForgeryToken()
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">User Management & Approvals</h1>
        <button class="btn btn-primary" data-toggle="modal" data-target="#createUserModal">
            <i class="fas fa-user-plus"></i> Create User
        </button>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#approvals">
                Pending Approvals <span class="badge badge-warning">@Model.Count()</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#users">
                All Users <span class="badge badge-info">@allUsers.Count</span>
            </a>
        </li>
    </ul>

    <div class="tab-content">
        <!-- Approvals Tab -->
        <div class="tab-pane fade show active" id="approvals">
            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-6 mb-4">
                            <div class="card approval-card shadow">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">@item.FirstName @item.LastName</h6>
                                </div>
                                <div class="card-body">
                                    <p><strong>Email:</strong> @item.Email</p>
                                    <p><strong>Organization:</strong> @item.Organization</p>
                                    <p><strong>Role:</strong> <span class="badge badge-primary">@item.RequestedRole</span></p>
                                    <p><strong>ID:</strong> @item.IdNumber | <strong>Cell:</strong> @item.Cell</p>
                                    <div class="mt-3">
                                        <button class="btn btn-sm btn-info" onclick="editBeforeApprove('@item.Id', '@item.Email', '@item.FirstName', '@item.LastName', '@item.Organization', '@item.IdNumber', '@item.Cell')">
                                            <i class="fas fa-edit"></i> Edit & Approve
                                        </button>
                                        <form asp-action="Approve" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="fas fa-check"></i> Approve
                                            </button>
                                        </form>
                                        <form asp-action="Reject" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="text" name="reason" placeholder="Reason" class="form-control form-control-sm d-inline-block" style="width: 120px;" />
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-times"></i> Reject
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">No pending approval requests.</div>
            }
        </div>

        <!-- Users Tab -->
        <div class="tab-pane fade" id="users">
            <div class="card shadow">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Organization</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in allUsers)
                                {
                                    <tr>
                                        <td>@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td>@user.Organization</td>
                                        <td><span class="badge badge-primary">@user.Role</span></td>
                                        <td>
                                            @if (user.IsLockedOut)
                                            {
                                                <span class="status-locked">Locked</span>
                                            }
                                            else
                                            {
                                                <span class="status-active">Active</span>
                                            }
                                        </td>
                                        <td class="user-actions">
                                            <button class="btn btn-sm btn-info" onclick="openEditModal('@user.Id')">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-warning" onclick="resetPassword('@user.Id')">
                                                <i class="fas fa-key"></i>
                                            </button>
                                            @if (user.IsLockedOut)
                                            {
                                                <button class="btn btn-sm btn-success" onclick="toggleLockout('@user.Id', false)">
                                                    <i class="fas fa-unlock"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-sm btn-danger" onclick="toggleLockout('@user.Id', true)">
                                                    <i class="fas fa-lock"></i>
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create User Modal -->
<div class="modal fade" id="createUserModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New User</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <form id="createUserForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>First Name *</label>
                                <input type="text" class="form-control" name="firstName" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Last Name *</label>
                                <input type="text" class="form-control" name="lastName" required />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Email *</label>
                        <input type="email" class="form-control" name="email" required />
                    </div>
                    <div class="form-group">
                        <label>Organization *</label>
                        <input type="text" class="form-control" name="organization" required />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>ID Number *</label>
                                <input type="text" class="form-control" name="idNumber" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Cell Phone *</label>
                                <input type="tel" class="form-control" name="cell" required />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Address *</label>
                        <textarea class="form-control" name="address" rows="2" required></textarea>
                    </div>
                    <div class="form-group">
                        <label>Role *</label>
                        <select class="form-control" name="role" required>
                            <option value="">Select...</option>
                            @foreach (var role in availableRoles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="createUser()">Create User</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit User Modal -->
<div class="modal fade" id="editUserModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit User</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <form id="editUserForm">
                    <input type="hidden" name="id" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>First Name *</label>
                                <input type="text" class="form-control" name="firstName" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Last Name *</label>
                                <input type="text" class="form-control" name="lastName" required />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Email *</label>
                        <input type="email" class="form-control" name="email" required />
                    </div>
                    <div class="form-group">
                        <label>Organization *</label>
                        <input type="text" class="form-control" name="organization" required />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>ID Number *</label>
                                <input type="text" class="form-control" name="idNumber" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Cell Phone *</label>
                                <input type="tel" class="form-control" name="cell" required />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Address *</label>
                        <textarea class="form-control" name="address" rows="2" required></textarea>
                    </div>
                    <div class="form-group">
                        <label>Role</label>
                        <select class="form-control" name="role">
                            <option value="">Keep current</option>
                            @foreach (var role in availableRoles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="updateUser()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Password Reset Modal -->
<div class="modal fade" id="passwordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Password Reset</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <p>Password reset for: <strong id="resetUser"></strong></p>
                <p>Temporary password:</p>
                <div class="password-display">
                    <span id="tempPassword"></span>
                    <button class="btn btn-sm btn-outline-primary float-right" onclick="copyPassword()">Copy</button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Done</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/user-management.js"></script>
}
